{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Checklist Schema",
  "description": "Schema for hierarchical checklists to track extraction workflow",
  "type": "object",
  "required": ["checklist_id", "title", "items"],
  "properties": {
    "checklist_id": {
      "type": "string",
      "description": "Unique identifier for this checklist (e.g., '01_create_file_partition')"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title for this checklist"
    },
    "description": {
      "type": "string",
      "description": "Optional description of what this checklist covers"
    },
    "items": {
      "type": "array",
      "description": "Array of checklist items",
      "items": {
        "$ref": "#/definitions/checklist_item"
      }
    }
  },
  "definitions": {
    "checklist_item": {
      "type": "object",
      "required": ["item_id", "description", "completed"],
      "properties": {
        "item_id": {
          "type": "string",
          "description": "Unique identifier for this item within the checklist"
        },
        "description": {
          "type": "string",
          "description": "Description of the task to complete"
        },
        "completed": {
          "type": "boolean",
          "description": "Whether this item has been completed"
        },
        "available_tools": {
          "type": "array",
          "description": "Optional list of script names (without .py extension) available to Claude during this step",
          "items": {
            "type": "string"
          }
        },
        "sub_checklist": {
          "type": "string",
          "description": "Optional reference to another checklist file (e.g., '02_preprocess_each_partition.json')"
        },
        "metadata": {
          "type": "object",
          "description": "Optional metadata about this item",
          "properties": {
            "file_path": {
              "type": "string"
            },
            "partition_id": {
              "type": "string"
            },
            "completed_at": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    }
  }
}
