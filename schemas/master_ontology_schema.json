{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Master Ontology Schema",
  "description": "Schema for master entity and relationship ontologies",
  "type": "object",
  "required": ["ontology_type", "version", "elements"],
  "properties": {
    "ontology_type": {
      "type": "string",
      "enum": ["entity", "relationship"],
      "description": "Type of ontology: entity or relationship"
    },
    "version": {
      "type": "string",
      "description": "Version of the master ontology (e.g., '1.0.0')"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last update"
    },
    "elements": {
      "type": "array",
      "description": "Array of ontology elements",
      "items": {
        "$ref": "#/definitions/ontology_element"
      }
    }
  },
  "definitions": {
    "ontology_element": {
      "type": "object",
      "required": ["type", "source_partitions", "all_example_files", "description"],
      "properties": {
        "type": {
          "type": "string",
          "description": "The element type (e.g., 'Person', 'DEPENDS_ON')"
        },
        "source_partitions": {
          "type": "array",
          "description": "List of partition IDs where this element appears",
          "items": {
            "type": "string"
          }
        },
        "all_example_files": {
          "type": "array",
          "description": "Aggregated example files from all partitions using this element",
          "items": {
            "oneOf": [
              {
                "type": "string",
                "description": "For entities: single file path"
              },
              {
                "type": "array",
                "description": "For relationships: tuple of two file paths",
                "items": {
                  "type": "string"
                },
                "minItems": 2,
                "maxItems": 2
              }
            ]
          }
        },
        "description": {
          "type": "string",
          "description": "Consolidated description of what this element represents across all partitions"
        }
      }
    }
  }
}
